<div class="col">
    <h3><span class="red">Tr&aacute;mites</span></h3>
    <ul data-role="listview" data-inset="true" data-filter="true">
        <% @tramites.each do |tramite| %>
            <li><%= link_to tramite.titulo, tramite, "data-rel"=>"dialog" %></li>
        <% end %>
