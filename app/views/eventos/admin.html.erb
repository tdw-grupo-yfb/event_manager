<div data-role="header" data-theme="c">
    <h3><span class="red">Eventos</span></h3>
    <%= link_to "Nuevo Evento", new_evento_path, "data-icon"=>"plus" %>
    <%= link_to "Refrescar", admin_path, "data-icon"=>"refresh" %>
</div>
<br/>
<ul data-role="listview" data-inset="true" data-filter="true">
    <%
    fixed_divider = false
    custom_divider = false
    %>
    <% @eventos.each do |evento| %>
        
        <li>
            <%= link_to evento.titulo, edit_evento_path(evento.id) %>
            <p class="ui-li-aside"><strong><%= evento.fechai %></strong>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
        </li>

    <% end %>
</ul>

